<section id="catalog">
    <div class="band">
        {{#if initialState}}
            {{#each movies }}
            {{> movie}}
            {{/each}}
        {{else}}
            {{#if foundMovie}}
                {{#each results }}
                {{> movie}}
                {{/each}}
            {{else}}
                <div class="no-posts">
                    <p class="no-offer">There are no such movie...</p>
                </div>
            {{/if}}
        {{/if}}

    </div>
</section>