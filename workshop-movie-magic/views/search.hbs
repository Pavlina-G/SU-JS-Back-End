<section id="search">
    <h1>Search</h1>
    <form action="" method="GET" class="form">
        <input type="text" class="search" name="title" placeholder="Title..." value="">
        <input type="text" name="genre" class="genre" placeholder="Genre..." value="">
        <input type="number" name="year" class="year" placeholder="Year..." value="">
        <input type="submit" value="search">
    </form>
</section>

